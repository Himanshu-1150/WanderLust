<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WanderLust</title>
  </head>
  <body>
    <h3>create new listings</h3>
    <form action="/listings" method="POST">
      <input
        type="text"
        name="listing[title]"
        placeholder="Title"
        required
      /><br />
      <input
        type="text"
        name="listing[description]"
        placeholder="Description"
        required
      />
      <br />
      <input type="number" name="listing[price]" placeholder="Price" required />
      <br />
      <input
        type="text"
        name="listing[image]"
        placeholder="Image URL"
        required
      />
      <br />
      <input
        type="text"
        name="listing[location]"
        placeholder="Location"
        required
      />
      <br />
      <input
        type="text"
        name="listing[country]"
        placeholder="Country"
        required
      />
      <br />
      <button type="submit">Create</button>
    </form>
  </body>
</html>
