<% layout("/layouts/boilerplate") %>

<body>
  <div class="row">
    <div class="col-8 offset-3 mt-2">
      <h1 class="mb-2">Listing details</h1>
    </div>

    <div class="card col-6 offset-3" style="width: 28rem">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img mb-4"
        alt="listing_img"
      />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          <%= listing.description %> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
      </div>
    </div>

    <div class="btns mb-4">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark editBtn col-md-1 offset-3"
        >Edit</a
      >
      <form action="/listings/<%= listing._id %>?_method=DELETE " method="POST">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </div>
</body>
